<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Clientes.RelatorioClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Relatório"
                android:textSize="24sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/divider53"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/Cor1" />

            <TextView
                android:id="@+id/txt_nomeClienteRelatorioA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/linearInicioRelatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView87"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Início"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarViewInicioRelatorioInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ap:mcv_selectionColor="#00F"
                    ap:mcv_showOtherDates="all"
                    ap:mcv_tileSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFinalRelatorio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Final"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarViewInicioRelatorioFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ap:mcv_selectionColor="#00F"
                    ap:mcv_showOtherDates="all"
                    ap:mcv_tileSize="50dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearTrabalhosSelecionados"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Trabalhos selecionados"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <View
                    android:id="@+id/divider54"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/Cor1" />

                <TextView
                    android:id="@+id/txt_periodoSelecionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="período"
                    android:textColor="@color/Cor5"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_saidasClienteRelatorioSelec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/frame_preto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/linearRelatorioNota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/frame_preto"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="Relatório de cobrança"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <View
                            android:id="@+id/divider55"
                            android:layout_width="100dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:background="@color/Cor1" />

                        <TextView
                            android:id="@+id/txt_nomeClienteRelatorioN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:text="TextView"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_periodoRelatorioNota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Período"
                            android:textColor="#6D000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_textoRelatorioNota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="Texto"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_imprimirRelatorioCliente"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/botao_arredondado"
                    android:text="Imprimir" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_pesquisarDataRelatorio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/botao_arredondado"
                android:text="Pesquisar" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>