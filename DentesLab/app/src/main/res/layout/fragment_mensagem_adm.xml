<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ADM1.ADMmensagem.MensagemAdmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearCriarMensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Criar nova mensagem"
                    android:textColor="@color/Cor1"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_tituloMensagem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TÃ­tulo:" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_corpoMensagem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Corpo da mensagem:" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Selecione os colaboradores"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/divider31"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/ap_black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_colab"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/txt_nomeColabsSelec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Colabs: "
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider32"
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/ap_black" />

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="20dp"
                    android:text="Icone:"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imgb_icon1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            tools:src="@tools:sample/avatars" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardIcon1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/dividerIcon1"
                                android:layout_width="50dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/background" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imgb_icon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            tools:src="@tools:sample/avatars" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/dividerIcon2"
                                android:layout_width="50dp"
                                android:layout_height="2dp"
                                android:layout_weight="1"
                                android:background="@color/background" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_criarMensagem"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/botao_arredondado"
                    android:text="Criar" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
