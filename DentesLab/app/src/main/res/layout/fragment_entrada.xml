<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cor5"
    tools:context=".ui.Trabalhos.Entrada.EntradaFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Configurar entrada"
                    android:textColor="@color/Cor1"
                    android:textSize="30sp" />

                <LinearLayout
                    android:id="@+id/linearBuscaClienteEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cadview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/search_arredondado"
                        app:cardCornerRadius="24dp">

                        <SearchView
                            android:id="@+id/sv_busca_cliente"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/search_arredondado"
                            android:iconifiedByDefault="false"
                            android:padding="15dp"
                            android:queryHint="Buscar cliente">

                        </SearchView>
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_clientes_entrada"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:elevation="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearInfoClienteEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="Informações clientes"
                        android:textColor="@color/Black"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider36"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Cor1" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Nome:"
                        android:textColor="@color/background"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_nome_cliente_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/Cor1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Telefone:"
                        android:textColor="@color/background"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_telefone_cliente_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/Cor1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Endereço:"
                        android:textColor="@color/background"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_endereco_cliente_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/Cor1"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBuscaServicoEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/search_arredondado"
                        app:cardBackgroundColor="@color/Cor5"
                        app:cardCornerRadius="24dp">

                        <SearchView
                            android:id="@+id/sv_busca_servicos"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/search_arredondado"
                            android:iconifiedByDefault="false"
                            android:padding="15dp"
                            android:queryHint="Tipo serviço" />
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_busca_servico"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:elevation="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearInfoServicoEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView76"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="Informações serviço"
                        android:textColor="@color/Black"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider44"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Cor1" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Nome serviço:"
                        android:textColor="@color/background"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_nome_servico_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/Cor1"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:text="Preco:"
                                android:textColor="@color/background"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/txt_preco_servico_entrada"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/Cor1"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:text="Quantidade:"
                                android:textColor="@color/background"
                                android:textSize="18sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="50dp"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_quantidade_servicos_entrada"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="1..."
                                    android:inputType="number"
                                    android:textColor="@color/Cor1"
                                    android:textSize="20sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearInfoAdcEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:text="Informações adcionais"
                        android:textColor="@color/Black"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider45"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/Cor1" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/background">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_dentes_sel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dentes desejados:"
                            android:textColor="@color/Cor1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/background">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_cor_dentes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cor dos dentes:"
                            android:textColor="@color/Cor1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/background">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_nome_paciente_E"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nome do paciente:" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/background">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_data_entrada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Digite a data de hoje:"
                            android:textColor="@color/Cor1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/background">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_preivsao_Saida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Previsão de saída:"
                            android:textColor="@color/Cor1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"
                        android:text="Observação:"
                        android:textColor="@color/background"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txt_obs_entrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:textColor="@color/Cor1" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_salvar_entrada"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/botao_arredondado"
                    android:text="Salvar" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>