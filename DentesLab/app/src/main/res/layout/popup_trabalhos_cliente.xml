<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearNota"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/logodenteslabv2" />

            <TextView
                android:id="@+id/txt_nomeC_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="@color/Cor7"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_nomeCliente_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome cliente:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_nomePaciente_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome Paciente:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_dentes_popup_servicosC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dentes:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_nomeServicos_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do serviço:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_valorServico_popup_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Valor serviço:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_dataEntrada_servico_popupC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data entrada:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_dataServico_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data saída:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/Cor1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_observacao_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observações:"
                    android:textColor="@color/textInput" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_excluir_saida"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/fechar_popup_btn"
                    android:text="Excluir"
                    android:textColor="@color/Negativo" />

                <Button
                    android:id="@+id/btn_editarSaida"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/arredondado_adc"
                    android:text="Editar"
                    android:textColor="@color/Positivo" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>