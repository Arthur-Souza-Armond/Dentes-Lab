<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Cor5"
    tools:context=".ui.Trabalhos.saida.SaidaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Saída"
                android:textColor="@color/Cor2"
                android:textSize="30sp" />

            <View
                android:id="@+id/divider15"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Digite o ID do serviço:"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="8"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/Cor5">

                    <SearchView
                        android:id="@+id/sv_trabalhos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@drawable/search_arredondado"
                        android:iconifiedByDefault="false"
                        android:inputType="number"
                        android:queryHint="ID..." />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_lista_Ids"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_saida_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID:"
                        android:textColor="@color/background" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_saida_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cliente"
                        android:textColor="@color/background" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_pacienteSaida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Paciente"
                        android:textColor="@color/Black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_saida_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Data:"
                        android:textColor="@color/background" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_saida_tipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de serviço:"
                        android:textColor="@color/background" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/Cor2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_saida_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total:"
                        android:textColor="@color/Positivo" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColorHint="@color/Cor2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_saida_obs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observação:"
                    android:textColor="@color/background" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView78"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Confeccionador"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/divider46"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/Cor1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="8"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/Cor5">

                    <SearchView
                        android:id="@+id/sv_buscaColab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/search_arredondado"
                        android:iconifiedByDefault="false"
                        android:inputType="text"
                        android:queryHint="Nome colaborador" />


                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Rv_listaColabSaida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp" />

                <TextView
                    android:id="@+id/textView79"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="Colaborador:"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_nomeColab_saida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Nome" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_saida_salvar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/botao_arredondado"
                android:text="Salvar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>